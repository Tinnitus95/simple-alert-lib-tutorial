{
  "compileOnSave": false,
  "compilerOptions": {
    "esModuleInterop": true,
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "ng-simple-alert": [
        "dist/ng-simple-alert"
      ],
      "ng-simple-alert/*": [
        "dist/ng-simple-alert/*"
      ],
      "oscar-not-so-simple-input": [
        "dist/oscar-not-so-simple-input"
      ],
      "oscar-not-so-simple-input/*": [
        "dist/oscar-not-so-simple-input/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
